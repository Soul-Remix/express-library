<h1>{{title}}</h1>
<p>{{author.span}}</p>

{{#if books.length}}
<p><strong>Delete the following books before attempting to delete this author.</strong></p>
<div>
    <h2>Books</h2>
    <dl>
        {{#each books}}
        <dt><a href={{this.url}}>{{this.title}}</a></dt>
        <dd>{{this.summary}}</dd>
        {{/each}}
    </dl>
</div>

{{else}}
<p>Do you really want to delete this Author</p>
<form action="" method="POST">
    <input type="hidden" name='authorid' required value={{author._id}}>
    <button type="submit">Delete</button>
</form>
{{/if}}