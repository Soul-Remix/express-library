<h1>{{title}}</h1>
<hr>
<form action="POST">
    <label for="genre-name">Genre</label>
    <input type="text" id="genre-name" name="name" placeholder="Fantasy, Poetry etc." value={{#if genre}} {{genre.name}} {{else}} "" {{/if}}>
    <button type="submit">Submit</button>
</form>

{{#if errors}}
<ul>
    {{#each errors}}
    <li>this.msg</li>
    {{/each}}
</ul>
{{/if}}